<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="3dp"
    android:layout_marginTop="3dp"
    android:layout_marginEnd="3dp"
    android:layout_marginBottom="3dp"
    android:background="@drawable/search_shape_video_bg"
    android:elevation="0dp"
    app:cardCornerRadius="8.46dp"
    app:cardElevation="0dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/search_item_video_foreground_img_foreground"
            android:layout_width="match_parent"
            android:layout_height="323dp"
            android:scaleType="fitXY"
            android:src="@drawable/search_ic_place_foreground_photo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/search_shape_foregroud_1_bg"
            app:layout_constraintBottom_toTopOf="@+id/view2"
            app:layout_constraintHeight_percent="0.148"/>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/search_shape_foregroud_2_bg"
            app:layout_constraintBottom_toTopOf="@+id/view3"
            app:layout_constraintHeight_percent="0.086"/>

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/search_shape_foregroud_3_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.117"/>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/search_ic_play"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/search_item_video_foreground_tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10.72dp"
            android:layout_marginEnd="11.16dp"
            android:layout_marginBottom="13.66dp"
            android:text="急救常识科普，一分钟 快速学习急救课程"
            android:textColor="@color/white"
            android:textSize="14.38sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/search_item_video_foreground_img_foreground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>