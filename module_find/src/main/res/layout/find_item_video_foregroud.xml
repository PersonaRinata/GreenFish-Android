<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/find_item_video_foregroud_img_user"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@color/purple_200"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >

        <ImageView
            android:id="@+id/find_item_video_foregroud_img_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/main_item_video_foregroud_img_user"
            app:layout_constraintEnd_toStartOf="@+id/main_item_video_foregroud_tv_like_num" />

        <TextView
            android:id="@+id/find_item_video_foregroud_tv_like_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="0" />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>