<?xml version="1.0" encoding="utf-8"?>
<com.handsome.module.video.wight.LoveViewGroup
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@color/teal_200">

        <xyz.doikki.videoplayer.player.VideoView
            android:id="@+id/video_fragment_video_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:playerBackgroundColor="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/video_fragment_img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/video_ic_back"
            android:layout_marginTop="16.41dp"
            android:layout_marginStart="20.09dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/video_fragment_img_user"
            android:layout_width="40.6dp"
            android:layout_height="40.6dp"
            android:layout_gravity="center"
            android:src="@drawable/video_ic_doctor"
            app:shapeAppearance="@style/Circle"
            android:layout_marginBottom="13.96dp"
            android:layout_marginStart="21.99dp"
            app:layout_constraintBottom_toTopOf="@+id/video_fragment_tv_describe"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/video_fragment_tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:lines="1"
            android:text="张医生"
            android:layout_marginStart="11.42dp"
            android:textColor="@color/white"
            android:textSize="17.64sp"
            app:layout_constraintBottom_toBottomOf="@+id/video_fragment_img_user"
            app:layout_constraintStart_toEndOf="@+id/video_fragment_img_user"
            app:layout_constraintTop_toTopOf="@+id/video_fragment_img_user" />


        <TextView
            android:id="@+id/video_fragment_tv_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.50"
            android:background="@drawable/video_shape_follow_have_bg"
            android:gravity="center"
            android:paddingStart="24.15dp"
            android:paddingTop="4.24dp"
            android:paddingEnd="23.33dp"
            android:paddingBottom="2.6dp"
            android:layout_marginStart="10.64dp"
            android:text="关注"
            android:textColor="@color/white"
            android:textSize="10.57sp"
            app:layout_constraintBottom_toBottomOf="@+id/video_fragment_img_user"
            app:layout_constraintStart_toEndOf="@+id/video_fragment_tv_user_name"
            app:layout_constraintTop_toTopOf="@+id/video_fragment_img_user" />

        <TextView
            android:id="@+id/video_fragment_tv_describe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="急救常识科普，一分钟快速学习急救课程"
            android:textColor="@color/white"
            android:textSize="16.07sp"
            android:layout_marginBottom="36dp"
            android:layout_marginStart="21.99dp"
            android:layout_marginEnd="21.99dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20.52dp"
            android:layout_marginBottom="21.31dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/video_fragment_tv_describe"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/video_fragment_comment_img_like"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@drawable/video_ic_unlike" />

            <TextView
                android:id="@+id/video_fragment_tv_like_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="5.99dp"
                android:text="点赞"
                android:textSize="14.38sp"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/video_fragment_img_comment"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_gravity="center"
                android:layout_marginTop="19.13dp"
                android:src="@drawable/video_ic_comment" />

            <TextView
                android:id="@+id/video_fragment_tv_comment_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="评论"
                android:layout_marginTop="5.96dp"
                android:textColor="@color/white" />


            <ImageView
                android:id="@+id/video_fragment_img_share"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:textSize="14.38sp"
                android:layout_marginTop="19.13dp"
                android:src="@drawable/video_ic_share" />

            <TextView
                android:id="@+id/video_fragment_tv_share_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="5.82dp"
                android:text="转发"
                android:textColor="@color/white" />


        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</com.handsome.module.video.wight.LoveViewGroup>