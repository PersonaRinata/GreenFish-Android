<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint1"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/chat_shape_issue_list_bg"
    android:layout_marginStart="21dp"
    android:layout_marginEnd="21dp"
    android:layout_marginTop="26.64dp"
    android:layout_marginBottom="26.64dp">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="19.96dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="33.13dp"
            android:src="@drawable/chat_ic_record" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8.16dp"
            android:text="健康档案"
            android:textColor="@color/fish_font_level4_color"
            android:textSize="14.8sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/base_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.72dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TextView
            android:id="@+id/chat_item_issue_list_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张小明"
            android:layout_marginStart="33.13dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/fish_font_level4_color"
            android:textStyle="bold"
            android:textSize="14.8sp" />

        <TextView
            android:id="@+id/chat_item_issue_list_tv_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12.71sp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="11.35dp"
            android:textColor="@color/chat_issue_list_base_info_text_color"
            android:text="女"/>

        <View
            android:layout_width="0.91dp"
            android:layout_height="11.8dp"
            android:layout_marginStart="5.61dp"
            android:background="@color/chat_hint_vertical_line_color"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/chat_item_issue_list_tv_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12.71sp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5.45dp"
            android:textColor="@color/chat_issue_list_base_info_text_color"
            android:text="19岁"/>

        <View
            android:layout_width="0.91dp"
            android:layout_height="11.8dp"
            android:layout_marginStart="6.04dp"
            android:background="@color/chat_hint_vertical_line_color"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/chat_item_issue_list_tv_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12.71sp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5.45dp"
            android:textColor="@color/chat_issue_list_base_info_text_color"
            android:text="180cm"/>

        <View
            android:layout_width="0.91dp"
            android:layout_height="11.8dp"
            android:layout_marginStart="5.3dp"
            android:background="@color/chat_hint_vertical_line_color"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/chat_item_issue_list_tv_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12.71sp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5.45dp"
            android:textColor="@color/chat_issue_list_base_info_text_color"
            android:text="70kg"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/extra_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="12.32dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/base_info">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="23.83dp"
                android:text="最近血糖："
                android:textSize="12.97sp"
                android:textColor="@color/fish_font_level4_color"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/chat_item_issue_list_tv_blood_sugar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4.87dp"
                android:background="@android:color/transparent"
                android:text="5.3"
                android:textColor="@color/fish_font_level4_color"
                android:textSize="14.29sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/mmol"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/mmol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="22.13dp"
                android:text="mmol"
                android:textSize="12.97sp"
                android:textColor="@color/fish_font_level4_color"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14.2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="23.83dp"
                android:text="最近血压："
                android:textSize="12.97sp"
                android:textColor="@color/fish_font_level4_color"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/chat_item_issue_list_tv_blood_pressure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4.87dp"
                android:text="70"
                android:textColor="@color/fish_font_level4_color"
                android:textSize="14.29sp"
                android:minWidth="15dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/mmHg"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/mmHg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="22.13dp"
                android:text="mmHg"
                android:textSize="12.97sp"
                android:textColor="@color/fish_font_level4_color"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14.2dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="23.83dp"
                android:text="最近心率："
                android:textColor="@color/fish_font_level4_color"
                android:textSize="12.97sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/chat_item_issue_list_tv_heart_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4.87dp"
                android:background="@android:color/transparent"
                android:text="185"
                android:textColor="@color/fish_font_level4_color"
                android:textSize="14.29sp"
                android:minWidth="15dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/min"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="22.13dp"
                android:text="次/min"
                android:textSize="12.97sp"
                android:textColor="@color/fish_font_level4_color"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14.2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="家族病史："
                android:textSize="12.97sp"
                android:textColor="@color/fish_font_level4_color"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="23.83dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/chat_item_issue_list_tv_family_disease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="22.81dp"
                android:textColor="@color/fish_font_level4_color"
                android:textSize="14.29sp"
                android:minWidth="15dp"
                android:textStyle="bold"
                android:text="哮喘、过敏症"/>

        </LinearLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/chat_item_issue_list_linear_self_introduction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_marginStart="33dp"
        android:layout_marginEnd="33dp"
        app:layout_constraintTop_toBottomOf="@id/extra_info">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/record_ic_self_introduction"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5.38dp"
            android:gravity="center"
            android:text="自我描述"
            android:textColor="@color/chat_hint_self_introduction_text_color"
            android:textSize="12.69sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintStart_toEndOf="@+id/imageView" />

        <TextView
            android:id="@+id/chat_item_issue_list_tv_self_introduction"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="7.63dp"
            android:text="我感到非常疲倦和无精打采，经常头痛和肌肉酸痛。我还经常感到恶心和食欲不振，有时候还会出现呕吐和腹泻的症状。我对抗组胺药物过敏。"
            android:textColor="@color/chat_self_introduction_text_color"
            android:textSize="12.53sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:layout_marginTop="17.82dp"
        android:layout_marginEnd="33dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chat_item_issue_list_linear_self_introduction">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/record_ic_last_disease"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5.38dp"
            android:gravity="center"
            android:text="过往病史"
            android:textColor="@color/chat_hint_self_introduction_text_color"
            android:textSize="12.69sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView1"
            app:layout_constraintStart_toEndOf="@+id/imageView1"
            app:layout_constraintTop_toTopOf="@+id/imageView1" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/chat_item_issue_list_rv_disease_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3.48dp"
            android:paddingBottom="11.52dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>