<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/main_item_content_list_constrain">

    <ImageView
        android:id="@+id/main_item_content_list_pic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/main_item_content_list_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:lines="2"
        android:text="这是一个标题,原始，启动，启动，启动"
        android:textSize="21sp"
        android:alpha="0.8"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/main_item_content_list_pic"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/main_item_content_list_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2023.9.28"
        android:textSize="12sp"
        android:alpha="0.5"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_item_content_list_pic" />

</androidx.constraintlayout.widget.ConstraintLayout>