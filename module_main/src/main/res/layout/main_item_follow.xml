<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/main_item_follow_img_user"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/main_ic_user"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/main_item_follow_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="用户1"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/main_item_follow_img_user"
        app:layout_constraintStart_toEndOf="@+id/main_item_follow_img_user"
        app:layout_constraintTop_toTopOf="@+id/main_item_follow_img_user" />

    <TextView
        android:id="@+id/main_item_follow_tv_follow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.50"
        android:background="@drawable/main_shape_follow_have_bg"
        android:gravity="center"
        android:paddingStart="16dp"
        android:paddingTop="4dp"
        android:paddingEnd="16dp"
        android:paddingBottom="4dp"
        android:layout_marginEnd="16dp"
        android:text="已关注"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/main_item_follow_img_user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/main_item_follow_img_user" />

</androidx.constraintlayout.widget.ConstraintLayout>